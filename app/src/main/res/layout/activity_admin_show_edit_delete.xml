<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:id="@+id/recyclerViewInterface"
    tools:context=".AdminShowEditDelete">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Administrator"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btnAddProduct"
            android:layout_alignParentRight="true"
            android:background="@drawable/baseline_add_circle_24"/>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="432dp"
        android:layout_gravity="center_horizontal"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">
            <ImageView
                android:id="@+id/txtimageProduct"
                android:layout_width="match_parent"
                android:layout_height="432dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/txtid"
                android:textStyle="bold"
                android:textSize="20sp"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/txttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/txtprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/txtsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ไชส์ :"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEdit"
            android:layout_width="129dp"
            android:layout_height="34dp"
            android:background="#F5890A"
            android:text="แก้ไขสินค้า"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_marginRight="20dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDelete"
            android:layout_width="129dp"
            android:layout_height="34dp"
            android:background="#EF3B3B"
            android:text="ลบสินค้า"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="15sp"
            android:onClick="daleteProduct"
            android:layout_toRightOf="@id/btnEdit"/>

    </RelativeLayout>

</LinearLayout>